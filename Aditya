<script>
// Hide intro after animation
setTimeout(() => document.getElementById('introContainer').style.display='none', 4500);

// Toggle hamburger menu
function toggleMenu() { document.querySelector('.menu').classList.toggle('active'); }

// Animated menu underline
const menu = document.querySelector('.menu');
const underline = document.querySelector('.underline');
menu.querySelectorAll('a').forEach(link=>{
  link.addEventListener('mouseenter', e=>{
    const {offsetLeft, offsetWidth} = e.target;
    underline.style.width = offsetWidth + 'px';
    underline.style.left = offsetLeft + 'px';
  });
});
menu.addEventListener('mouseleave', ()=>{
  underline.style.width = '0';
});

// Blockchain Background Animation
const canvas = document.getElementById("bgCanvas");
const ctx = canvas.getContext("2d");
function resizeCanvas() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
resizeCanvas();
window.addEventListener("resize", resizeCanvas);

const blocks = [];
for (let i=0;i<12;i++){
  blocks.push({x:Math.random()*canvas.width, y:Math.random()*canvas.height, size:40, dx:(Math.random()-0.5)*0.5, dy:(Math.random()-0.5)*0.5});
}

function draw(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.strokeStyle="rgba(170,0,255,0.2)";
  blocks.forEach((b1,i)=>{
    blocks.forEach((b2,j)=>{
      if(i!==j){
        const dist=Math.hypot(b1.x-b2.x,b1.y-b2.y);
        if(dist<200){
          ctx.beginPath();
          ctx.moveTo(b1.x,b1.y);
          ctx.lineTo(b2.x,b2.y);
          ctx.stroke();
        }
      }
    });
  });
  blocks.forEach(b=>{
    ctx.shadowColor="purple";
    ctx.shadowBlur=20;
    ctx.fillStyle="rgba(170,0,255,0.15)";
    ctx.strokeStyle="purple";
    ctx.lineWidth=2;
    ctx.fillRect(b.x-b.size/2,b.y-b.size/2,b.size,b.size);
    ctx.strokeRect(b.x-b.size/2,b.y-b.size/2,b.size,b.size);
    b.x+=b.dx; b.y+=b.dy;
    if(b.x<0||b.x>canvas.width) b.dx*=-1;
    if(b.y<0||b.y>canvas.height) b.dy*=-1;
  });
  requestAnimationFrame(draw);
}
draw();
</script>
